@model NumberGuessingGame.ViewModels.SecretNumberViewModel

<div id="guess-input">
@if (Model.CanMakeGuess)
{
	using (Html.BeginForm())
	{
		<p>
			Gissa ett tal mellan 1 och 100:
			@Html.TextBoxFor(model => model.Guess, new { value = "" })
			<input type="submit" value="Skicka gissning" class="btn btn-green">
			<span class="input-error">@Html.ValidationMessageFor(model => model.Guess)</span>
		</p>
	}
}

else
{
	using (Html.BeginForm())
	{
		<p>
			Gissa ett tal mellan 1 och 100:
			@Html.TextBoxFor(model => model.Guess, new { disabled = "disabled" })
			<input type="submit" value="Skicka gissning" class="btn btn-green" disabled>
		</p>
	}
}
</div>